@model DACS.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
        <input asp-for="Email" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Mật khẩu</label>
        <input asp-for="Password" type="password" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4 flex items-center">
        <input asp-for="RememberMe" type="checkbox" class="mr-2" />
        <label class="text-sm text-gray-700">Ghi nhớ đăng nhập</label>
    </div>

    <div asp-validation-summary="All" class="text-red-500 text-sm mb-2"></div>

    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md">
        Đăng nhập
    </button>

    <p class="mt-4 text-sm text-center">
        Chưa có tài khoản? <a asp-action="Register" class="text-blue-600 hover:underline">Đăng ký ngay</a>
    </p>
</form>
