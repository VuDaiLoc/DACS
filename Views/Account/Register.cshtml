@using DACS.Models.Account
@model RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form asp-action="Register" method="post">
    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Họ và tên</label>
        <input asp-for="FullName" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
        <input asp-for="Email" type="email" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Mật khẩu</label>
        <input asp-for="Password" type="password" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2">Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" type="password" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md">
        Đăng ký
    </button>

    <p class="mt-4 text-sm text-center">
        Đã có tài khoản? <a asp-action="Login" class="text-blue-600 hover:underline">Đăng nhập ngay</a>
    </p>
</form>
