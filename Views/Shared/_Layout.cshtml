<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Bãi Gửi Xe</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100 font-sans">
    <div class="min-h-screen flex flex-col">
        <!-- Header -->
        <header class="bg-blue-800 text-white shadow-md">
            <div class="container mx-auto px-4 py-4 flex justify-between items-center">
                <h1 class="text-2xl font-bold">QUẢN LÝ BÃI GỬI XE</h1>
                <div class="flex items-center space-x-4">
                    <span class="text-sm">Xin chào, Admin</span>
                    <div class="w-10 h-10 rounded-full bg-blue-600 flex items-center justify-center">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="flex flex-1">
            <!-- Sidebar -->
            <aside class="w-64 bg-gray-800 text-white shadow-md">
                <nav class="p-4">
                    <ul class="space-y-2">
                        <li>
                            <a href="#" class="flex items-center p-2 rounded bg-blue-700">
                                <i class="fas fa-tachometer-alt mr-3"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded hover:bg-gray-700">
                                <i class="fas fa-car mr-3"></i>
                                <span>Quản lý xe</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded hover:bg-gray-700">
                                <i class="fas fa-map-marked-alt mr-3"></i>
                                <span>Mô hình bãi xe</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded hover:bg-gray-700">
                                <i class="fas fa-users mr-3"></i>
                                <span>Khách hàng</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded hover:bg-gray-700">
                                <i class="fas fa-file-invoice-dollar mr-3"></i>
                                <span>Hóa đơn</span>
                            </a>
                        </li>
                        <li>
                            <a href="#" class="flex items-center p-2 rounded hover:bg-gray-700">
                                <i class="fas fa-cog mr-3"></i>
                                <span>Cài đặt</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </aside>

            <!-- Main Content Area -->
            <main class="flex-1 p-8">
                <div class="mb-6 flex justify-between items-center">
                    <h2 class="text-2xl font-bold text-gray-800">Quản Lý Bãi Gửi Xe</h2>
                    <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md flex items-center">
                        <i class="fas fa-plus mr-2"></i> Thêm Xe Mới
                    </button>
                </div>

                <!-- Parking Model -->
                <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                    <h3 class="text-xl font-semibold mb-4 text-gray-800 border-b pb-2">Mô Hình Bãi Xe</h3>
                    <div class="grid grid-cols-5 gap-4">
                        <!-- Parking slots -->
                        <div class="bg-gray-200 p-4 rounded text-center">
                            <div class="bg-green-500 text-white py-2 rounded mb-2">A1</div>
                            <div class="text-sm">Xe máy</div>
                            <div class="text-xs text-gray-500">Đã đỗ</div>
                        </div>
                        <div class="bg-gray-200 p-4 rounded text-center">
                            <div class="bg-green-500 text-white py-2 rounded mb-2">A2</div>
                            <div class="text-sm">Xe máy</div>
                            <div class="text-xs text-gray-500">Đã đỗ</div>
                        </div>
                        <div class="bg-gray-200 p-4 rounded text-center">
                            <div class="bg-red-500 text-white py-2 rounded mb-2">A3</div>
                            <div class="text-sm">Xe máy</div>
                            <div class="text-xs text-gray-500">Trống</div>
                        </div>
                        <div class="bg-gray-200 p-4 rounded text-center">
                            <div class="bg-green-500 text-white py-2 rounded mb-2">A4</div>
                            <div class="text-sm">Xe máy</div>
                            <div class="text-xs text-gray-500">Đã đỗ</div>
                        </div>
                        <div class="bg-gray-200 p-4 rounded text-center">
                            <div class="bg-red-500 text-white py-2 rounded mb-2">A5</div>
                            <div class="text-sm">Xe máy</div>
                            <div class="text-xs text-gray-500">Trống</div>
                        </div>
                        <!-- Car slots -->
                        <div class="bg-gray-200 p-4 rounded text-center col-span-2">
                            <div class="bg-red-500 text-white py-2 rounded mb-2">B1</div>
                            <div class="text-sm">Ô tô</div>
                            <div class="text-xs text-gray-500">Trống</div>
                        </div>
                        <div class="bg-gray-200 p-4 rounded text-center col-span-2">
                            <div class="bg-green-500 text-white py-2 rounded mb-2">B2</div>
                            <div class="text-sm">Ô tô</div>
                            <div class="text-xs text-gray-500">Đã đỗ</div>
                        </div>
                        <div class="bg-gray-200 p-4 rounded text-center col-span-2">
                            <div class="bg-green-500 text-white py-2 rounded mb-2">B3</div>
                            <div class="text-sm">Ô tô</div>
                            <div class="text-xs text-gray-500">Đã đỗ</div>
                        </div>
                    </div>
                </div>

                <!-- Vehicle List -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-xl font-semibold mb-4 text-gray-800 border-b pb-2">Danh Sách Xe Đang Gửi</h3>

                    <!-- Search and Filter -->
                    <div class="mb-4 flex justify-between">
                        <div class="relative w-64">
                            <input type="text" placeholder="Tìm kiếm..." class="w-full pl-10 pr-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        </div>
                        <div class="flex space-x-2">
                            <select class="border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option>Tất cả loại xe</option>
                                <option>Xe máy</option>
                                <option>Ô tô</option>
                            </select>
                            <select class="border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option>Tất cả trạng thái</option>
                                <option>Đang gửi</option>
                                <option>Đã trả</option>
                            </select>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="overflow-x-auto">
                        <table class="min-w-full bg-white">
                            <thead class="bg-blue-600 text-white">
                                <tr>
                                    <th class="py-3 px-4 text-left">STT</th>
                                    <th class="py-3 px-4 text-left">Biển số</th>
                                    <th class="py-3 px-4 text-left">Loại xe</th>
                                    <th class="py-3 px-4 text-left">Vị trí</th>
                                    <th class="py-3 px-4 text-left">Thời gian vào</th>
                                    <th class="py-3 px-4 text-left">Trạng thái</th>
                                    <th class="py-3 px-4 text-left">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody class="text-gray-700">
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-3 px-4">1</td>
                                    <td class="py-3 px-4">29A-12345</td>
                                    <td class="py-3 px-4">Xe máy</td>
                                    <td class="py-3 px-4">A1</td>
                                    <td class="py-3 px-4">08:30 25/03/2023</td>
                                    <td class="py-3 px-4">
                                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Đang gửi</span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <button class="text-blue-600 hover:text-blue-800 mr-2">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-800">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-3 px-4">2</td>
                                    <td class="py-3 px-4">30A-67890</td>
                                    <td class="py-3 px-4">Xe máy</td>
                                    <td class="py-3 px-4">A2</td>
                                    <td class="py-3 px-4">09:15 25/03/2023</td>
                                    <td class="py-3 px-4">
                                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Đang gửi</span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <button class="text-blue-600 hover:text-blue-800 mr-2">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-800">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-3 px-4">3</td>
                                    <td class="py-3 px-4">29V-11223</td>
                                    <td class="py-3 px-4">Ô tô</td>
                                    <td class="py-3 px-4">B2</td>
                                    <td class="py-3 px-4">10:00 25/03/2023</td>
                                    <td class="py-3 px-4">
                                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Đang gửi</span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <button class="text-blue-600 hover:text-blue-800 mr-2">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-800">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-3 px-4">4</td>
                                    <td class="py-3 px-4">29H-44556</td>
                                    <td class="py-3 px-4">Ô tô</td>
                                    <td class="py-3 px-4">B3</td>
                                    <td class="py-3 px-4">11:30 25/03/2023</td>
                                    <td class="py-3 px-4">
                                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">Đang gửi</span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <button class="text-blue-600 hover:text-blue-800 mr-2">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-800">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div class="mt-4 flex justify-between items-center">
                        <div class="text-sm text-gray-600">
                            Hiển thị 1 đến 4 của 4 mục
                        </div>
                        <div class="flex space-x-1">
                            <button class="px-3 py-1 border rounded-md bg-blue-600 text-white">1</button>
                            <button class="px-3 py-1 border rounded-md hover:bg-gray-100">2</button>
                            <button class="px-3 py-1 border rounded-md hover:bg-gray-100">3</button>
                            <button class="px-3 py-1 border rounded-md hover:bg-gray-100">></button>
                        </div>
                    </div>
                </div>
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white py-4">
            <div class="container mx-auto px-4 text-center text-sm">
                <p>© 2023 Hệ thống quản lý bãi gửi xe. Bản quyền thuộc về Parking Management.</p>
            </div>
        </footer>
    </div>

    <!-- Add Vehicle Modal (hidden by default) -->
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden" id="addVehicleModal">
        <div class="bg-white rounded-lg shadow-xl w-full max-w-md">
            <div class="flex justify-between items-center border-b px-6 py-4">
                <h3 class="text-lg font-semibold text-gray-800">Thêm Xe Mới</h3>
                <button class="text-gray-500 hover:text-gray-700" id="closeModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="p-6">
                <form>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="licensePlate">
                            Biển số xe
                        </label>
                        <input class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                               id="licensePlate" type="text" placeholder="Nhập biển số xe">
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="vehicleType">
                            Loại xe
                        </label>
                        <select class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                id="vehicleType">
                            <option>Xe máy</option>
                            <option>Ô tô</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2" for="parkingSlot">
                            Vị trí đỗ
                        </label>
                        <select class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                id="parkingSlot">
                            <option>A1</option>
                            <option>A2</option>
                            <option>A3</option>
                            <option>A4</option>
                            <option>A5</option>
                            <option>B1</option>
                            <option>B2</option>
                            <option>B3</option>
                        </select>
                    </div>
                    <div class="flex justify-end space-x-3 mt-6">
                        <button type="button" class="px-4 py-2 border rounded-md text-gray-700 hover:bg-gray-100" id="cancelAdd">
                            Hủy bỏ
                        </button>
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                            Lưu lại
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Simple modal toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const addBtn = document.querySelector('button.bg-blue-600');
            const modal = document.getElementById('addVehicleModal');
            const closeBtn = document.getElementById('closeModal');
            const cancelBtn = document.getElementById('cancelAdd');

            addBtn.addEventListener('click', function() {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
            });

            closeBtn.addEventListener('click', function() {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            });

            cancelBtn.addEventListener('click', function() {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            });
        });
    </script>
</body>
</html>