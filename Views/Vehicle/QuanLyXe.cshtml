@{
    //Layout = null;
}

@model List<DACS.Models.Vehicle>

<div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold text-gray-800">Quản lý xe</h2>
        <form asp-controller="Vehicle" asp-action="Index" method="get" class="flex space-x-2">
            <input type="text" name="search" placeholder="Tìm theo biển số..." class="border rounded px-3 py-1" />
            <button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700">Tìm kiếm</button>
        </form>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full table-auto text-sm text-left border">
            <thead class="bg-blue-600 text-white">
                <tr>
                    <th class="px-4 py-2">STT</th>
                    <th class="px-4 py-2">Mã thẻ</th>
                    <th class="px-4 py-2">Tên KH</th>
                    <th class="px-4 py-2">Loại xe</th>
                    <th class="px-4 py-2">Hãng xe</th>
                    <th class="px-4 py-2">Màu xe</th>
                    <th class="px-4 py-2">Biển số</th>
                    <th class="px-4 py-2">Vị trí đỗ</th>
                    <th class="px-4 py-2">Trạng thái</th>
                    <th class="px-4 py-2">Thao tác</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr class="hover:bg-gray-100">
                        <td class="px-4 py-2">@(i + 1)</td>
                        <td class="px-4 py-2">@Model[i].CardCode</td>
                        <td class="px-4 py-2">@Model[i].CustomerName</td>
                        <td class="px-4 py-2">@Model[i].Type</td>
                        <td class="px-4 py-2">@Model[i].Brand</td>
                        <td class="px-4 py-2">@Model[i].Color</td>
                        <td class="px-4 py-2">@Model[i].LicensePlate</td>
                        <td class="px-4 py-2">@Model[i].ParkingSlot</td>
                        <td class="px-4 py-2">
                            <span class="@(Model[i].Status == "Đang gửi" ? "text-green-700 bg-green-100" : "text-gray-700 bg-gray-200") px-2 py-1 rounded text-xs">@Model[i].Status</span>
                        </td>
                        <td class="px-4 py-2 space-x-2">
                            <a asp-action="Edit" asp-route-id="@Model[i].Id" class="text-blue-600 hover:text-blue-800">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model[i].Id" class="text-red-600 hover:text-red-800">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    function showQuanLyXe() {
        document.getElementById("moHinhBaiXe").style.display = "none";
        document.getElementById("quanLyXe").style.display = "block";
    }
</script>

